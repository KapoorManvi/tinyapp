
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!-- IF USER NOT LOGGED IN, DISPLAY "LOGIN" & "REGISTER" LINKS -->
    <% if (!user) { %>
      <a style="color:rgb(30, 94, 255)" href="/login" action="/login" method="POST">Login</a>
      <span>&nbsp; or &nbsp;</span> 
      <a style="color:rgb(30, 94, 255)" href="/register" action="/login" method="POST">Register</a>
   <% } else { %>
    <!-- IF USER LOGGED IN, DISPLAY USER'S EMAIL -->
    <span>Logged in as: <%= user.email %> &nbsp;</span> 
    <form class="formClass" action="/logout" method="POST"> 
      <button style="background-color:crimson" type="submit" class="btn btn-primary">Logout</button>
    </form>
    <% } %>
  </nav>
</header>